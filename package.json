{
  "name": "@dev-vortex/react-native-responsive-styles",
  "version": "0.0.0-development",
  "description": "React Native responsive styling",
  "keywords": [
    "react",
    "native",
    "style",
    "styling",
    "responsive"
  ],
  "author": "Joao Correia <joao@correia.pw> (https://joao.correia.pw)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-vortex/react-native-responsive-styles.git"
  },
  "main": "dist/index",
  "typings": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && copyfiles -u 1 \"src/types/*.d.ts\" dist && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "release": "semantic-release",
    "prepare": "npm run build",
    "commit": "cz",
    "lint": "eslint . --ext .ts",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/react-native": "^0.64.5",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.27.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.0",
    "semantic-release": "^17.4.3",
    "tscpaths": "^0.0.9",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "unpkg": "dist/index.js",
  "jsdelivr": "dist/index.js"
}
