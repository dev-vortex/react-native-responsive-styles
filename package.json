{
    "name": "@dev-vortex/react-native-responsive-styles",
    "version": "1.0.0",
    "description": "React Native responsive styling",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "typings": "src/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc && copyfiles -u 1 \"src/**/*.d.ts\" dist && tscpaths -p tsconfig.json -s ./src -o ./dist",
        "prepare": "npm run build",
        "cm": "cz",
        "lint": "eslint . --ext .ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dev-vortex/react-native-responsive-styles.git"
    },
    "keywords": [],
    "author": "joaocac",
    "license": "ISC",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "commitizen": "^4.2.4",
        "copyfiles": "^2.4.1",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^7.27.0",
        "eslint-plugin-prettier": "^3.4.0",
        "prettier": "^2.3.0",
        "tscpaths": "^0.0.9",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "@types/react-native": "^0.64.5",
        "react-native": "^0.64.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
